%h1= t('home.add_new')
= simple_form_for @home, html: {class: 'form-vertical'} do |f|
  %h5= t('home.required')
  .clearfix
    #guess.linkbutton{:style => "width: 120px", :type => "button", :value => t('home.guess_location')}
      Guess Location
  #nearby
  = f.input :name, :required => true
  = f.input :street, :required => true
  = f.input :city, :required => true
  = f.input :state, :required => true
  = f.input :country, priority: ["United States", "Canada", "United Kingdom"], :required => true, input_html: {class: 'form-control'}
  = f.hidden_field :latitude
  = f.hidden_field :longitude
  = f.input :long_term, :collection => [[t('home.long_term'), true], [t('home.short_term'), false]], :include_blank => false
  = f.input :family, :collection => [[t('home.type.family'), true], [t('home.type.individual'), false]], :include_blank => false
  = f.input :directions, :placeholder => t('home.directions_hint'), :as => :text, :required => false, :input_html => { :class => "span6" }
  = f.input :comment, :placeholder => t('home.comments_hint'), :as => :text, :required => false, :input_html => { :class => "span6" }
  = f.button :submit, t('home.restsubmit'), :class => "linkbutton"
